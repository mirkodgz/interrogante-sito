---
import Layout from "../layouts/Layout.astro";
import { Home } from "lucide-react";
---

<Layout title="404 - Página no encontrada | Interrogante Spettacolo">
    <div
        class="min-h-[70vh] flex flex-col items-center justify-center text-center px-6 py-20"
    >
        <div class="bg-primary p-8 rounded-full mb-8 shadow-xl">
            <img
                src="/Logo-Interrogante-white2.svg"
                alt="Interrogante Spettacolo"
                class="w-32 h-auto object-contain"
            />
        </div>

        <h1
            class="font-nav text-8xl md:text-9xl text-gray-100 font-black leading-none absolute z-0 -translate-y-16 scale-150 select-none"
        >
            404
        </h1>

        <div class="relative z-10">
            <h2
                class="font-nav text-4xl md:text-5xl text-primary uppercase tracking-wide mb-6"
            >
                Ooops!
            </h2>

            <p
                class="font-nav text-2xl md:text-3xl text-gray-800 mb-2 uppercase"
            >
                ¿Te has perdido?
            </p>
            <p
                class="font-nav text-xl md:text-2xl text-gray-500 mb-10 uppercase"
            >
                Ti sei perso?
            </p>

            <a
                href="/"
                class="inline-flex items-center gap-3 bg-primary text-white px-10 py-4 rounded-full font-nav tracking-widest uppercase hover:bg-secondary transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1"
            >
                <Home className="w-5 h-5" />
                Volver al Inicio / Torna alla Home
            </a>
        </div>
    </div>
</Layout>
