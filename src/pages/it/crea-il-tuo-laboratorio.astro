---
import Layout from "../../layouts/Layout.astro";
import PageHero from "../../components/ui/PageHero";

const heroImage =
    "https://res.cloudinary.com/dskliu1ig/image/upload/v1768146634/CreatuTallerCover_v9fy5l.jpg";
---

<Layout title="Crea il tuo Laboratorio | Interrogante Spettacolo">
    <main class="bg-white pb-20">
        {/* HERO SECTION */}
        <PageHero
            client:load
            title="CREA IL TUO LABORATORIO"
            image={heroImage}
            height="60vh"
        >
            <p
                class="text-white/80 font-sans text-xl mt-4 uppercase tracking-[4px]"
            >
                Design su misura
            </p>
        </PageHero>

        <section class="py-24 container mx-auto px-6 max-w-4xl text-center">
            <h2
                class="font-nav text-3xl md:text-5xl text-primary uppercase mb-8"
            >
                La tua visione, la nostra esperienza
            </h2>
            <p
                class="font-sans text-lg text-gray-600 leading-relaxed text-center mb-8"
            >
                Progettiamo esperienze di formazione in spagnolo su misura per
                istituzioni, aziende o gruppi privati. Se hai un'idea o una
                necessità specifica, il nostro team creativo lavorerà con te per
                sviluppare un laboratorio unico che unisca arte, cultura e
                apprendimento.
            </p>
            <div class="mt-12">
                <a
                    href="/it/contatto"
                    class="inline-block bg-primary text-white px-10 py-4 rounded-full font-nav tracking-widest uppercase hover:bg-secondary transition-all duration-300"
                >
                    Raccontaci la tua idea
                </a>
            </div>
        </section>
    </main>
</Layout>
