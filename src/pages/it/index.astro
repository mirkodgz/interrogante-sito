        target: "_self",
        collaboratorLogo:
            "https://res.cloudinary.com/dskliu1ig/image/upload/v1768143720/256px-Logotipo_del_Instituto_Cervantes.svg_wea4va.png",
    },
];
---

<Layout
    title="Interrogante Spettacolo - Compagnia Artistica"
    description="Interrogante Spettacolo: Punto di riferimento per la cultura spagnola e latinoamericana a Milano. Scopri il Festival A PIEDI NUDI, le nostre creazioni teatrali e la formazione artistica."
>
    <WelcomeLoader client:load />
    <main>
        {/* SECCIÓN 1: HERO */}
        <Hero client:load />

        {/* SECCIÓN 2: CINTAS DE TEXTO */}
        <TextStrips client:load lang="it" />

        {/* SECCIÓN: PORTAFOLIO / PROYECTOS */}
        <PortfolioSection
            client:load
            portfolioItems={portfolioItems}
            lang="it"
        />

        {/* SECCIÓN: CHI SIAMO */}
        <AboutSection client:load lang="it" />

        {/* SECCIÓN 5: C.T.A. FESTIVAL */}
        <FestivalCTA client:load lang="it" />

        {/* SECCIÓN 6: NEWS */}
        <NewsSection client:load lang="it" />

        {/* SECCIÓN 7: BLOG (Sempre in Spagnolo come richiesto) */}
        <BlogSection client:load blogItems={blogItems} />
    </main>
</Layout>
