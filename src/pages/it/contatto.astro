---
import Layout from "../../layouts/Layout.astro";
import { Mail, Phone, Facebook, Instagram, Linkedin } from "lucide-react";
import { contactInfo } from "../../data/navigation";

const facebookUrl = contactInfo.social.facebook;
const instagramUrl = contactInfo.social.instagram;
const linkedinUrl = contactInfo.social.linkedin;
---

<Layout
    title="Contatto e Prenotazione"
    description="Vuoi portare il teatro e la cultura spagnola nella tua istituzione? Contattaci per prenotare spettacoli, laboratori e formazione a Milano e in Italia."
>
    <main>
        {/* HERO SECTION - VIDEO BACKGROUND */}
        <div class="relative h-[80vh] w-full bg-black overflow-hidden group">
            <video
                class="absolute inset-0 w-full h-full object-cover opacity-90 transition-opacity duration-300 group-hover:opacity-60"
                autoplay
                muted
                loop
                playsinline
            >
                <source
                    src="https://res.cloudinary.com/dskliu1ig/video/upload/v1768568868/Video-Contactanos_jtw4nx.mp4"
                    type="video/mp4"
                />
            </video>
            {/* Overlay for darker contrast to hide original text better */}
            <div class="absolute inset-0 bg-black/40"></div>

            {/* Text Overlay */}
            <div class="absolute inset-0 flex items-center justify-center z-20">
                <h1
                    class="text-white text-6xl md:text-8xl font-bold tracking-widest uppercase opacity-90 select-none"
                >
                    CONTATTACI
                </h1>
            </div>
        </div>

        {/* CONTACT INFO BAR */}
        <div class="bg-primary text-white py-16 relative z-10">
            <div class="container mx-auto px-6 max-w-7xl">
                <div
                    class="grid grid-cols-1 md:grid-cols-3 gap-12 md:gap-0 items-start"
                >
                    {/* EMAIL BLOCK */}
                    <div class="flex flex-col items-center gap-6">
                        <Mail className="w-12 h-12" strokeWidth={1} />
                        <div
                            class="flex flex-col items-center font-nav text-xl md:text-2xl tracking-wider uppercase leading-snug"
                        >
                            <a
                                href="mailto:kaluaarauz@gmail.com"
                                class="hover:text-secondary transition-colors"
                                >kaluaarauz@gmail.com</a
                            >
                            <a
                                href="mailto:kalua@interrogantespettacolo.com"
                                class="hover:text-secondary transition-colors"
                                >kalua@interrogantespettacolo.com</a
                            >
                        </div>
                    </div>

                    {/* PHONE BLOCK */}
                    <div
                        class="flex flex-col items-center gap-6 md:border-l md:border-r border-white/20"
                    >
                        <Phone className="w-12 h-12" strokeWidth={1} />
                        <div
                            class="flex flex-col items-center font-nav text-xl md:text-2xl tracking-wider uppercase leading-snug"
                        >
                            <a
                                href="tel:+393921683752"
                                class="hover:text-secondary transition-colors"
                                >+39 392 168 3752</a
                            >
                            <a
                                href="tel:+393276205332"
                                class="hover:text-secondary transition-colors"
                                >+39 327 620 5332</a
                            >
                        </div>
                    </div>

                    {/* SOCIAL BLOCK */}
                    <div class="flex flex-col items-center gap-6">
                        <div class="flex gap-4">
                            <a
                                href={facebookUrl}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="border-2 border-white p-2 rounded-sm hover:bg-white hover:text-primary transition-colors duration-300"
                            >
                                <Facebook
                                    className="w-8 h-8"
                                    strokeWidth={1.5}
                                />
                            </a>
                            <a
                                href={instagramUrl}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="border-2 border-white p-2 rounded-sm hover:bg-white hover:text-primary transition-colors duration-300"
                            >
                                <Instagram
                                    className="w-8 h-8"
                                    strokeWidth={1.5}
                                />
                            </a>
                            <a
                                href={linkedinUrl}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="border-2 border-white p-2 rounded-sm hover:bg-white hover:text-primary transition-colors duration-300"
                            >
                                <Linkedin
                                    className="w-8 h-8"
                                    strokeWidth={1.5}
                                />
                            </a>
                        </div>
                        <span
                            class="font-nav text-xl md:text-2xl tracking-widest uppercase font-bold"
                            >SOCIAL</span
                        >
                    </div>
                </div>
            </div>
        </div>

        {/* BOTTOM TITLE */}
        <div class="bg-white py-32 text-center">
            <h1
                class="font-nav text-3xl md:text-5xl lg:text-6xl text-primary uppercase leading-none"
            >
                CONTATTACI
            </h1>
        </div>
    </main>
</Layout>
