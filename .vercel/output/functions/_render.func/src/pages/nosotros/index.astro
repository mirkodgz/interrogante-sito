---
import Layout from "../../layouts/Layout.astro";
import AboutHero from "../../components/blocks/AboutHero";
import AboutDescription from "../../components/blocks/AboutDescription";
import TeamList from "../../components/blocks/TeamList";
import { getCollection } from "astro:content";

const teamMembers = await getCollection("team");
---

<Layout title="Nosotros - Interrogante Spettacolo">
    <main>
        <AboutHero client:load />
        <AboutDescription client:load />
        <TeamList client:load teamMembers={teamMembers} />
    </main>
</Layout>
