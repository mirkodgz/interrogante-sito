---
import Layout from "../../layouts/Layout.astro";
import { CheckCircle2, FileText } from "lucide-react";

const heroImage =
    "https://res.cloudinary.com/dskliu1ig/image/upload/v1768145257/Foto-v1s22134_r4yrrn.jpg";
---

<Layout title="Formazione per Insegnanti di Spagnolo | Interrogante Spettacolo">
    <main class="bg-white pb-20">
        <!-- HERO SECTION -->
        <section
            class="relative h-[70vh] flex items-center justify-center overflow-hidden"
        >
            <div class="absolute inset-0">
                <img
                    src="https://res.cloudinary.com/dskliu1ig/image/upload/v1768145257/Foto-v1s22134_r4yrrn.jpg"
                    alt="Formazione per Insegnanti"
                    class="w-full h-full object-cover"
                />
                <div class="absolute inset-0 bg-black/40"></div>
            </div>
            <div class="relative z-10 text-center px-6">
                <h1
                    class="font-nav text-4xl md:text-6xl lg:text-7xl text-white uppercase max-w-5xl mx-auto leading-none drop-shadow-2xl"
                >
                    FORMAZIONE PER INSEGNANTI DI SPAGNOLO
                </h1>
            </div>
        </section>

        <!-- SECTION 1: DAL PALCOSCENICO ALL'AULA -->
        <section class="py-24 container mx-auto px-6 max-w-7xl">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
                <div class="relative group">
                    <div
                        class="absolute -inset-4 bg-primary/5 rounded-sm transform -rotate-2 group-hover:rotate-0 transition-transform duration-500"
                    >
                    </div>
                    <img
                        src="https://images.unsplash.com/photo-1524178232363-1fb2b075b655?q=80&w=2070&auto=format&fit=crop"
                        alt="Workshop"
                        class="relative rounded-sm shadow-2xl w-full aspect-video object-cover"
                    />
                </div>
                <div class="flex flex-col gap-6">
                    <h2
                        class="font-nav text-3xl md:text-4xl text-primary uppercase tracking-tight leading-tight"
                    >
                        DAL PALCOSCENICO ALL'AULA
                    </h2>
                    <h3
                        class="font-sans text-xl font-bold text-gray-900 border-l-4 border-secondary pl-4 py-1 italic"
                    >
                        Fondamenti teorici e pratici dell'Educazione Artistica
                        per l'apprendimento socio-emotivo nelle lezioni di
                        spagnolo
                    </h3>
                    <div
                        class="font-sans text-gray-700 space-y-4 text-lg leading-relaxed text-justify"
                    >
                        <p>
                            Un Workshop di 2 ore progettato per arricchire
                            l'insegnamento dello spagnolo attraverso
                            l'educazione artistica, fornendo strumenti teorici e
                            pratici che potenzino la creatività e lo sviluppo
                            integrale del docente.
                        </p>
                        <p>
                            Viene data grande importanza allo sviluppo di
                            competenze emotive e relazionali, trasformando
                            l'aula in uno spazio di co-creazione e apprendimento
                            dinamico.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- SECTION 2: CARATTERISTICHE -->
        <section class="py-24 bg-gray-50">
            <div class="container mx-auto px-6 max-w-7xl">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-start">
                    <div class="order-2 lg:order-1 flex flex-col gap-10">
                        <h2
                            class="font-nav text-3xl md:text-4xl text-primary uppercase tracking-tight"
                        >
                            IL WORKSHOP SI <span class="text-secondary"
                                >CARATTERIZZA</span
                            > PER:
                        </h2>

                        <div class="space-y-8">
                            {
                                [
                                    {
                                        title: "Interdisciplinarietà",
                                        desc: "Per scoprire come integrare l'educazione artistica con altre discipline in modo fluido ed efficace.",
                                    },
                                    {
                                        title: "Sviluppo Integrale",
                                        desc: "Per esplorare come l'educazione artistica contribuisca alla crescita cognitiva, emotiva, sociale e motoria degli studenti.",
                                    },
                                    {
                                        title: "Apprendimento Esperienziale",
                                        desc: "Per imparare a creare esperienze significative attraverso attività artistiche coinvolgenti e dinamiche di gruppo.",
                                    },
                                    {
                                        title: "Creatività",
                                        desc: "Per scoprire come l'educazione artistica favorisca la creatività, competenza essenziale per la risoluzione dei problemi.",
                                    },
                                ].map((item) => (
                                    <div class="flex gap-4 items-start group">
                                        <div class="mt-1 bg-primary/10 p-1 rounded-full group-hover:bg-primary group-hover:text-white transition-colors duration-300">
                                            <CheckCircle2
                                                className="w-6 h-6"
                                                strokeWidth={1.5}
                                            />
                                        </div>
                                        <div>
                                            <h4 class="font-nav text-xl text-primary uppercase mb-1">
                                                {item.title}
                                            </h4>
                                            <p class="font-sans text-gray-600 leading-relaxed text-lg">
                                                {item.desc}
                                            </p>
                                        </div>
                                    </div>
                                ))
                            }
                        </div>
                    </div>

                    <div class="order-1 lg:order-2 grid grid-cols-2 gap-4">
                        <img
                            src="https://images.unsplash.com/photo-1544928147-79a2dbc1f389?q=80&w=1974&auto=format&fit=crop"
                            class="rounded-sm shadow-lg w-full aspect-square object-cover transform translate-y-8"
                            alt="Laboratorio"
                        />
                        <img
                            src="https://images.unsplash.com/photo-1517048676732-d65bc937f952?q=80&w=2070&auto=format&fit=crop"
                            class="rounded-sm shadow-lg w-full aspect-square object-cover"
                            alt="Laboratorio"
                        />
                    </div>
                </div>
            </div>
        </section>

        <!-- SECTION 3: PDF INFORMATIVO -->
        <section class="py-24 container mx-auto px-6 text-center">
            <div
                class="max-w-3xl mx-auto bg-primary p-12 rounded-sm shadow-2xl transform rotate-1"
            >
                <div class="transform -rotate-1">
                    <h2
                        class="font-nav text-3xl md:text-4xl text-white uppercase mb-8 tracking-widest"
                    >
                        VISUALIZZA IL NOSTRO PDF INFORMATIVO
                    </h2>
                    <a
                        href="#"
                        class="inline-flex items-center gap-3 bg-secondary text-white px-10 py-4 rounded-full font-nav tracking-widest uppercase hover:bg-white hover:text-primary transition-all duration-300 transform hover:scale-105 shadow-xl"
                    >
                        <FileText className="w-6 h-6" />
                        Scarica PDF
                    </a>
                </div>
            </div>
        </section>
    </main>
</Layout>
