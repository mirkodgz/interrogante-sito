---
import { getEntry, render } from "astro:content";
import Layout from "../../../layouts/Layout.astro";
import PageHero from "../../../components/ui/PageHero";

const { slug } = Astro.params;
if (!slug) return Astro.redirect("/404");

const entry = await getEntry("team", slug);
if (!entry) return Astro.redirect("/404");

const { Content } = await render(entry);
---

<Layout title={`${entry.data.name} - Equipo`}>
    <main class="bg-white min-h-screen">
        {/* HERO SECTION */}
        <PageHero
            client:load
            title={entry.data.name.toUpperCase()}
            image={entry.data.cover}
            height="60vh"
            overlayOpacity="bg-black/20"
        />

        {/* CONTENT SECTION */}
        <section class="py-24">
            <div class="container mx-auto px-6 max-w-7xl">
                {/* Header Row: Name/Role & Socials */}
                <div
                    class="flex flex-col md:flex-row justify-between items-start border-b border-black/10 pb-12 mb-16 gap-8"
                >
                    <div class="flex flex-col">
                        <h2
                            class="font-serif text-[35px] uppercase text-black mb-2 tracking-wide leading-none"
                        >
                            {entry.data.name}
                        </h2>
                        <p
                            class="font-sans text-lg md:text-[20px] text-black/70"
                        >
                            {entry.data.role}
                        </p>
                    </div>

                    <div class="flex gap-6">
                        {
                            entry.data.facebook && (
                                <a
                                    href={entry.data.facebook}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="text-black hover:text-primary transition-colors"
                                >
                                    <span class="sr-only">Facebook</span>
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        width="34"
                                        height="34"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                    >
                                        <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z" />
                                    </svg>
                                </a>
                            )
                        }
                        {
                            entry.data.instagram && (
                                <a
                                    href={entry.data.instagram}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="text-black hover:text-primary transition-colors"
                                >
                                    <span class="sr-only">Instagram</span>
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        width="34"
                                        height="34"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                    >
                                        <>
                                            <rect
                                                width="20"
                                                height="20"
                                                x="2"
                                                y="2"
                                                rx="5"
                                                ry="5"
                                            />
                                            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z" />
                                            <line
                                                x1="17.5"
                                                x2="17.51"
                                                y1="6.5"
                                                y2="6.5"
                                            />
                                        </>
                                    </svg>
                                </a>
                            )
                        }
                        {
                            entry.data.linkedin && (
                                <a
                                    href={entry.data.linkedin}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="text-black hover:text-primary transition-colors"
                                >
                                    <span class="sr-only">LinkedIn</span>
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        width="34"
                                        height="34"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                    >
                                        <>
                                            <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z" />
                                            <rect
                                                width="4"
                                                height="12"
                                                x="2"
                                                y="9"
                                            />
                                            <circle cx="4" cy="4" r="2" />
                                        </>
                                    </svg>
                                </a>
                            )
                        }
                    </div>
                </div>

                {/* Profile & Bio Layout */}
                <div
                    class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-24 items-start"
                >
                    {/* Circle Image - Left Column */}
                    <div
                        class="lg:col-span-4 flex justify-center lg:justify-start"
                    >
                        <div
                            class="relative w-64 h-64 lg:w-80 lg:h-80 rounded-full overflow-hidden border-4 border-white shadow-2xl ring-1 ring-black/5 bg-primary/5"
                        >
                            <img
                                src={entry.data.profileImage ||
                                    entry.data.cover}
                                alt={entry.data.name}
                                class="w-full h-full object-cover"
                            />
                        </div>
                    </div>

                    {/* Bio Text - Right Column */}
                    <div class="lg:col-span-8 text-justify">
                        <div
                            class="bio-content font-sans text-[#3c3c3c] text-base font-semibold leading-relaxed [&_a]:text-primary [&_a]:font-bold [&_a]:no-underline hover:[&_a]:underline"
                        >
                            <Content />
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>

<style is:global>
    .bio-content p {
        margin-bottom: 1.25rem !important;
    }
    .bio-content p:last-child {
        margin-bottom: 0 !important;
    }
</style>

<script>
    // Handle external links in the bio section
    const bioLinks = document.querySelectorAll(".prose a");
    bioLinks.forEach((link) => {
        const href = link.getAttribute("href");
        if (href && (href.startsWith("http") || href.startsWith("https"))) {
            link.setAttribute("target", "_blank");
            link.setAttribute("rel", "noopener noreferrer");
        }
    });
</script>
