---
import Layout from "../../layouts/Layout.astro";
import { Check, FileText, Send, UserCheck } from "lucide-react";
import DoubleBlockSection from "../../components/blocks/DoubleBlockSection";

const heroImage =
    "https://res.cloudinary.com/dskliu1ig/image/upload/v1768570408/la-carretilla-web-cover_ao294n.webp";
---

<Layout title="La Carretilla - Associati | Interrogante Spettacolo">
    <main class="bg-white pb-20">
        <!-- HERO SECTION -->
        <section
            class="relative h-[40vh] md:h-[70vh] flex items-center justify-center overflow-hidden bg-primary"
        >
            <div class="absolute inset-0">
                <img
                    src={heroImage}
                    alt="La Carretilla Hero"
                    class="w-full h-full object-cover"
                />
            </div>
            <div class="absolute inset-0 bg-black/20"></div>

            <div
