---
import Layout from "../layouts/Layout.astro";
import PageHero from "../components/ui/PageHero";

const heroImage =
    "https://res.cloudinary.com/dskliu1ig/image/upload/v1768145671/JugandoEnEspanol-DEF_sbobsb.jpg";
---

<Layout
    title="Talleres para Niños | Jugando en Español | Interrogante Spettacolo"
>
    <main class="bg-white pb-20">
        {/* HERO SECTION */}
        <PageHero
            client:load
            title="JUGANDO EN ESPAÑOL"
            image={heroImage}
            height="60vh"
        >
            <p
                class="text-white/80 font-sans text-xl mt-4 uppercase tracking-[4px]"
            >
                Talleres para Niños
            </p>
        </PageHero>

        <section class="py-24 container mx-auto px-6 max-w-4xl text-center">
            <h2
                class="font-nav text-3xl md:text-5xl text-primary uppercase mb-8"
            >
                Próximamente
            </h2>
            <p
                class="font-sans text-lg text-gray-600 leading-relaxed text-justify"
            >
                Estamos preparando experiencias inolvidables para los más
                pequeños. Muy pronto podrás encontrar aquí toda la información
                sobre nuestros talleres infantiles donde el juego y el idioma se
                encuentran.
            </p>
            <div class="mt-12">
                <a
                    href="/contacto"
                    class="inline-block bg-primary text-white px-10 py-4 rounded-full font-nav tracking-widest uppercase hover:bg-secondary transition-all duration-300"
                >
                    Contactar para más info
                </a>
            </div>
        </section>
    </main>
</Layout>
